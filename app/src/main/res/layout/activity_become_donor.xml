<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".BecomeDonor">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="46dp"
        android:background="#ffffff"
        android:src="@drawable/leffr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Become Donor"
        android:textColor="#0A0819"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/pinback"
        android:hint="Name"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/pinback"
        android:hint="E- Mail"
        android:inputType="textEmailAddress"
        android:paddingStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="243dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Gender"
        android:textColor="#0A0819"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="47.5dp"
        android:layout_height="47.5dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="287dp"
        android:src="@drawable/man1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="114dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/montserrat"
        android:text="Male"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="292dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/path355"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="47.5dp"
        android:layout_height="47.5dp"
        android:layout_marginTop="287dp"
        android:layout_marginEnd="105dp"
        android:src="@drawable/woman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="106dp"
        android:fontFamily="@font/montserrat"
        android:text="Female"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="381dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Select Blood Group"
        android:textColor="#0A0819"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/apos"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/group310"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/aneg"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/group311"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/bneg"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/group312"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/bpos"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/group319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/opos"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/group313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/oneg"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="292dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/group318"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/abneg"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="472dp"
        android:src="@drawable/group316"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/abpos"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="472dp"
        android:src="@drawable/group317"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="542dp"
        android:fontFamily="@font/montserrat"
        android:text="   Do you want to make your contact number \n   visible for other"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="342dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="605dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/getoptbck"
        android:fontFamily="@font/montserrat_bold"
        android:text="DONE"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>