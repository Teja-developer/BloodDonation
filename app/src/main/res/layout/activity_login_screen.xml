<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".LoginScreen">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/hand_logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/rect"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:src="@drawable/hand"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/upper_curve"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hand_logo">

        <TextView
            android:id="@+id/login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="@string/login_register"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/button_shape"
            android:drawableStart="@drawable/fb_s"
            android:fontFamily="@font/montserrat"
            android:paddingStart="31dp"
            android:paddingEnd="31dp"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="#e1ebf7"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/login_text" />

        <Button
            android:id="@+id/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/button_shape2"
            android:drawableStart="@drawable/search"
            android:fontFamily="@font/montserrat"
            android:paddingStart="31dp"
            android:paddingEnd="31dp"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/facebook" />

        <Button
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/button_shape2"
            android:drawableStart="@drawable/tel"
            android:fontFamily="@font/montserrat"
            android:paddingStart="31dp"
            android:paddingEnd="31dp"
            android:text="Mobile Number"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/google" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>